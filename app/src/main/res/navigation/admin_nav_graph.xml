<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_nav_graph"
    app:startDestination="@id/admin_nav_home">

    <fragment
        android:id="@+id/admin_nav_home"
        android:name="com.example.beteranos.ui_admin.home.AdminHomeFragment"
        android:label="fragment_admin_home"
        tools:layout="@layout/fragment_admin_home" />

    <argument
        android:name="username"
        android:defaultValue="Admin"
        app:argType="string" />

    <fragment
        android:id="@+id/admin_nav_calendar"
        android:name="com.example.beteranos.ui_admin.reservation.AdminReservationFragment"
        android:label="fragment_admin_calendar"
        tools:layout="@layout/fragment_admin_reservation" />

    <fragment
        android:id="@+id/admin_nav_reservations"
        android:name="com.example.beteranos.ui_admin.management.AdminManagementFragment"
        android:label="fragment_admin_reservations"
        tools:layout="@layout/fragment_admin_management" />

    <fragment
        android:id="@+id/admin_nav_dashboard"
        android:name="com.example.beteranos.ui_admin.dashboard.AdminDashboardFragment"
        android:label="fragment_admin_dashboard"
        tools:layout="@layout/fragment_admin_dashboard" />

    <fragment
        android:id="@+id/admin_nav_profile"
        android:name="com.example.beteranos.ui_admin.profile.AdminProfileFragment"
        android:label="fragment_profile_dashboard"
        tools:layout="@layout/fragment_admin_profile" />
</navigation>