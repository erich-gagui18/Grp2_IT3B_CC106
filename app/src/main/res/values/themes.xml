<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme (Material3) -->
    <style name="Base.Theme.LinaUI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material3-compatible color attributes -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/gray</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color uses the primary attribute -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <!-- App default theme -->
    <style name="Theme.LinaUI" parent="Base.Theme.LinaUI" />

    <!-- Named custom theme (inherits base so no duplication) -->
    <style name="Theme.Beteranos" parent="Base.Theme.LinaUI">
        <!-- If you want to override colors specifically for Beteranos, do it here.
             e.g. <item name="colorPrimary">@color/some_other_color</item> -->
    </style>

</resources>
