<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/barber_profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/barber_sample"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Barber profile picture" />

        <TextView
            android:id="@+id/barber_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="John Doe"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/barber_profile_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/check_mark_icon" />

        <TextView
            android:id="@+id/barber_specialization_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Specialization: Fades &amp; Tapers"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/barber_name_text"
            app:layout_constraintTop_toBottomOf="@id/barber_name_text"
            app:layout_constraintEnd_toStartOf="@id/check_mark_icon"/>

        <TextView
            android:id="@+id/barber_day_off_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Available today"
            android:textColor="@color/status_scheduled"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/barber_name_text"
            app:layout_constraintTop_toBottomOf="@id/barber_specialization_text"
            app:layout_constraintEnd_toStartOf="@id/check_mark_icon"/>

        <ImageView
            android:id="@+id/check_mark_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Selected" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>