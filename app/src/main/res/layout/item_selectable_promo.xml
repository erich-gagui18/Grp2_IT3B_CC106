<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/button_selector_black_gray"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/promo_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/barber_sample" /> <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/promo_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promo Name"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/promo_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promo description goes here."
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>
</LinearLayout>

    <ImageView
        android:id="@+id/check_mark_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:layout_margin="12dp"
        android:src="@drawable/ic_check_circle"
        android:visibility="gone"
        android:tint="@color/white"/>

</FrameLayout>