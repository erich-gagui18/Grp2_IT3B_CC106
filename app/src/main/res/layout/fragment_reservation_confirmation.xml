<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/iv_success_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_check_circle"
            android:contentDescription="Success"
            app:tint="#1B5E20" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_success_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Reservation Confirmed!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:letterSpacing="0.02" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Your appointment has been successfully booked"
            android:textSize="14sp"
            android:textColor="#666666" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_subtitle"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Person"
                        app:tint="#2C3E50" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ConfirmationLabel"
                            android:text="Name"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:id="@+id/tv_customer_name"
                            style="@style/ConfirmationValue"
                            android:text="Customer Name"
                            android:textSize="16sp"
                            android:textColor="#2C3E50"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_phone"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Phone"
                        app:tint="#2C3E50" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ConfirmationLabel"
                            android:text="Phone Number"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:id="@+id/tv_customer_phone"
                            style="@style/ConfirmationValue"
                            android:text="09123456789"
                            android:textSize="16sp"
                            android:textColor="#2C3E50"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Calendar"
                        app:tint="#2C3E50" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ConfirmationLabel"
                            android:letterSpacing="0.05"
                            android:text="Schedule"
                            android:textAllCaps="true"
                            android:textColor="#7F8C8D"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_schedule"
                            style="@style/ConfirmationValue"
                            android:layout_marginTop="4dp"
                            android:text="October 17, 2025 at 09:00 AM"
                            android:textColor="#2C3E50"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_scissor"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Barber"
                        app:tint="#2C3E50" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ConfirmationLabel"
                            android:text="Barber"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:id="@+id/tv_barber_name"
                            style="@style/ConfirmationValue"
                            android:text="Barber Name"
                            android:textSize="16sp"
                            android:textColor="#2C3E50"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location_on"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Location"
                        app:tint="#2C3E50" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ConfirmationLabel"
                            android:text="Location"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:id="@+id/tv_service_location"
                            style="@style/ConfirmationValue"
                            android:text="Barbershop"
                            android:textSize="16sp"
                            android:textColor="#2C3E50"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/label_address"
                            style="@style/ConfirmationLabel"
                            android:text="Home Address"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05"
                            android:layout_marginTop="8dp"
                            android:visibility="gone"
                            tools:visibility="visible"/>

                        <TextView
                            android:id="@+id/tv_address"
                            style="@style/ConfirmationValue"
                            android:text="123 Sample St."
                            android:textSize="15sp"
                            android:textColor="#2C3E50"
                            android:layout_marginTop="2dp"
                            android:visibility="gone"
                            tools:visibility="visible"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="20dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_list"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Services"
                        app:tint="#2C3E50" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ConfirmationLabel"
                            android:text="Services"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:id="@+id/tv_services_list"
                            style="@style/ConfirmationValue"
                            android:text="- Haircut (₱150.00)\n- Beard Trim (₱100.00)"
                            android:textSize="15sp"
                            android:textColor="#2C3E50"
                            android:lineSpacingExtra="4dp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_local_offer"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Promo"
                        app:tint="#2C3E50" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/ConfirmationLabel"
                            android:text="Promo"
                            android:textSize="12sp"
                            android:textColor="#7F8C8D"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05" />

                        <TextView
                            android:id="@+id/tv_promo_name"
                            style="@style/ConfirmationValue"
                            android:text="No promo selected"
                            android:textSize="15sp"
                            android:textColor="#95A5A6"
                            android:textStyle="italic"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="20dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Service Price:"
                        android:textSize="16sp"
                        android:textColor="#2C3E50" />
                    <TextView
                        android:id="@+id/tv_total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="₱250.00"
                        android:textSize="16sp"
                        android:textColor="#2C3E50"
                        android:textStyle="bold"
                        tools:text="₱250.00"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/discount_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promo Discount:"
                        android:textSize="16sp"
                        android:textColor="#E74C3C" />
                    <TextView
                        android:id="@+id/tv_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="-₱25.00"
                        android:textSize="16sp"
                        android:textColor="#E74C3C"
                        android:textStyle="bold"
                        tools:text="-₱25.00"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOTAL FINAL PRICE"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50" />
                    <TextView
                        android:id="@+id/tv_final_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="₱225.00"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        tools:text="₱225.00"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#BBDEFB"
                    android:layout_marginVertical="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Down Payment Paid (50%):"
                        android:textSize="16sp"
                        android:textColor="#1B5E20" />
                    <TextView
                        android:id="@+id/tv_down_payment_paid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="-₱112.50"
                        android:textSize="16sp"
                        android:textColor="#1B5E20"
                        android:textStyle="bold"
                        tools:text="-₱112.50"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REMAINING BALANCE"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#E67E22" />
                    <TextView
                        android:id="@+id/tv_remaining_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="₱112.50"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#E67E22"
                        tools:text="₱112.50"/>
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_done"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/card_details"
            android:layout_marginTop="16dp"
            android:text="Done"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:letterSpacing="0.05"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"
            android:elevation="2dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/btn_done"/>

    </RelativeLayout>
</ScrollView>